<!DOCTYPE html>
<html>
  <head>
    <title>SimpleBlog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css'%>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <body>

      <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
      <h5 class="my-0 mr-md-auto font-weight-normal">
        <%= link_to "Home" ,home_path , :class => 'btn btn-lg btn-block btn-outline-primary' %>
      </h5>
      <nav class="my-2 my-md-0 mr-md-3">
        <%= link_to "Add New Category" ,new_tag_path , :class => 'btn btn-lg btn-block btn-outline-primary' %>
      </nav>
    </div>

    <div class="container">
      <%= yield %>
    </div>
    </body>
</html>
